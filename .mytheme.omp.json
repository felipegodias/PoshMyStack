{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "white",
          "properties": {
            "display_version": false,
            "postfix": ")",
            "prefix": "("
          },
          "style": "plain",
          "type": "python"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": false,
      "segments": [
        {
          "foreground": "lightBlue",
          "properties": {
            "prefix": "",
            "text": "#"
          },
          "style": "plain",
          "type": "text"
        },
        {
          "foreground": "red",
          "properties": {
            "root_icon": "%"
          },
          "style": "plain",
          "type": "root"
        },
        {
          "properties": {
            "host_color": "green",
            "prefix": "",
            "user_color": "cyan",
            "user_info_separator": " <darkGray>@</> "
          },
          "style": "plain",
          "type": "session"
        },
        {
          "foreground": "lightYellow",
          "properties": {
            "prefix": "<darkGray>in </>",
            "style": "full"
          },
          "style": "plain",
          "type": "path"
        },
        {
          "properties": {
            "prefix": "<darkGray>on</> <white></>"
          },
          "style": "plain",
          "type": "git"
        },
        {
          "foreground": "darkGray",
          "properties": {
            "postfix": "]",
            "prefix": "["
          },
          "style": "plain",
          "type": "time"
        },
        {
          "foreground": "red",
          "properties": {
            "always_numeric": true,
            "prefix": " C:"
          },
          "style": "plain",
          "type": "exit"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "lightRed",
          "properties": {
            "postfix": "",
            "prefix": "",
            "text": "Î»"
          },
          "style": "plain",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true
}
